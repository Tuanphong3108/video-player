{
  "name": "Trình Phát Video",
  "short_name": "Video Player",
  "description": "Mở file video trực tiếp từ desktop.",
  "start_url": "/",
  "display": "standalone",
  "icons": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "video/*": [".mp4", ".webm", ".ogv", ".ogg", ".mov", ".mkv"]
      }
    }
  ]
}
